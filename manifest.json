{
  "name": "YouTube sequence",
  "browser_action": {
    "default_icon": {
      "38": "icon.png",
	  "48": "icon.png",
	  "128": "icon.png"
    }
  },
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [{
    "matches": ["https://www.youtube.com/*"],
    "js": ["content-script.js"],
    "css": ["content-script.css"],
    "run_at": "document_idle"
  }],
  "version": "0.1"
}
